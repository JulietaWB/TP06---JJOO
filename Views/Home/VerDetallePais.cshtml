
<div class="caja">
    <h1 class="titulo"> @ViewBag.InfoPais.Nombre </h1>

    <img src= @ViewBag.InfoPais.Bandera alt="Foto @ViewBag.InfoPais.Nombre">

    <div class="tarjetas">
        @foreach (Deportista depor in ViewBag.ListaDepor)
        {            
            <div class="card" style="width: 18rem;">
                <img src= @depor.Foto class="card-img-top" alt="Foto de @depor.Nombre">
                <div class="card-body">
                    <h5 class="card-title">@depor.Apellido @depor.Nombre</h5>
                </div>
                <a href='@Url.Action("VerDetalleDeportista", new {iddeporte=@depor.IdDeportista})' class="btn btn-primary">Ver m√°s</a>
            </div>           
        }
    </div>
</div>
